@using TesteWebMotors.AppService.ViewModel
@model IList<AnuncioView>
@{
    ViewData["Title"] = "Home Page";
}

@if (ViewData["alertaExcluiu"] != null)
{
    <script type="text/javascript">
        alert('Registro excluído');
    </script>
}

<p>
    @Html.ActionLink("Adicionar Anuncio", "Criar")
</p>

<table class="table table-striped table-bordered table-sm" id="tbAnuncios">
    <thead>
        <tr>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Versao</th>
            <th>Ano</th>
            <th>KM</th>
            <th>Observação</th>
            <th>Editar</th>
            <th>Excluir</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-right">@item.Marca</td>
                <td>@item.Modelo</td>
                <td>@item.Versao</td>
                <td>@item.Ano</td>
                <td>@item.Quilometragem</td>
                <td>@item.Observacao</td>
                <td class="text-center">
                    <form asp-action="Editar" method="post">
                        @Html.ActionLink("Editar", "Editar", new { idAnuncio = item.Id })
                        @*<button type="submit" value="@item" class="btn btn-warning btn-sm">
                            Editar
                        </button>*@
                    </form>
                </td>
                <td class="text-center">
                    <form asp-action="Excluir" method="post">
                        <input type="hidden" name="IdAnuncio" value="@item.Id" />
                        <button type="submit" value="@item.Id" class="btn btn-danger btn-sm">
                            Excluir
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
