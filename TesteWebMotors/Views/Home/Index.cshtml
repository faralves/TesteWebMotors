@using TesteWebMotors.AppService.ViewModel
@model IList<AnuncioView>
@{
    ViewData["Title"] = "Home Page";
}

@if (ViewData["alertaExcluiu"] != null)
{
    <script type="text/javascript">
        alert('Registro excluído');
    </script>
}
